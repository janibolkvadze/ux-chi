h2 Examples

h3 Base
.example.-mb--3
  .-p--3
    .m-form__item
      chi-switch(id='toggle1',label='Label')
  .example-tabs.-pl--2
    ul.a-tabs#examples-default
      li.-active
        a(href=`#webcomponent`) Web component
      li
        a(href=`#html`) HTML
  .a-tabs-panel.-active#webcomponent
    :code(lang="html")
      <chi-switch id="toggle1" label="Label"></chi-switch>
  .a-tabs-panel#html
    :code(lang="html")
      <div class="m-form__item">
        <label class="a-switch" for="toggle1">
          <input type="checkbox" class="a-switch__input" id="toggle1">
          <span class="a-switch__content">
            <span class="a-switch__thumb"></span>
          </span>
          <span class="a-switch__label">Label</span>
        </label>
      </div>

